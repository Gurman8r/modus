{
	"app_name": "modus launcher",
	"app_version": "alpha",
	"app_data_path": "../../../",

	"imgui": {
		"style": { "path": "resource/modus_launcher.style" }
	},

	"addons": [
		{ "path": "addons/sandbox" }
	],

	"scripts": [
		{ "path": "resource/modus_launcher.py" }
	],

	"window": {
		"title": "modus",
		"display": {
			"resolution": [ 1280, 720 ],
			"bits_per_pixel": [ 8, 8, 8, 8 ],
			"refresh_rate": -1
		},
		"context": {
			"api": "opengl",
			"major": 4,
			"minor": 6,
			"profile": "compat",
			"depth_bits": 24,
			"stencil_bits": 8,
			"multisample": true,
			"srgb_capable": false
		},
		"hints": {
			"auto_iconify": true,
			"decorated": true,
			"doublebuffer": false,
			"center_cursor": false,
			"floating": false,
			"focus_on_show": true,
			"focused": true,
			"maximized": true,
			"resizable": true,
			"visible": false
		}
	}
}
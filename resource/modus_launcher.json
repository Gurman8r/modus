{
	"path": "../../../",
	"window": {
		"title": "modus",
		"video": {
			"resolution"	: [ 1280, 720 ],
			"bits_per_pixel": [ 8, 8, 8, 8 ],
			"refresh_rate"	: -1
		},
		"context": {
			"api"			: "opengl",
			"major"			: 4,
			"minor"			: 6,
			"profile"		: "compat",
			"depth_bits"	: 24,
			"stencil_bits"	: 8,
			"multisample"	: true,
			"srgb_capable"	: false
		},
		"hints": {
			"auto_iconify"	: true,
			"decorated"		: true,
			"doublebuffer"	: false,
			"center_cursor"	: false,
			"floating"		: false,
			"focus_on_show"	: true,
			"focused"		: true,
			"maximized"		: true,
			"resizable"		: true,
			"visible"		: false
		}
	},
	"client": {
		"callbacks"		: true,
		"gui_style"		: "resource/modus_launcher.style",
		"menu_enabled"	: true,
		"dock_enabled"	: true,
		"dock_title"	: "dockspace",
		"dock_border"	: 0,
		"dock_rounding"	: 0,
		"dock_alpha"	: 0,
		"dock_padding"	: [ 0, 0 ],
		"dock_size"		: [ 0, 0 ],
		"plugins": [
			{ "path": "./plugins/sandbox" }
		],
		"scripts": [
			{ "path": "resource/modus_launcher.py" }
		]
	}
}